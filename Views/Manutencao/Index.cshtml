@model Manutencao
@{
    ViewData["Title"] = "Manutenção";
}

<h1>Manutenção</h1>

<div class="row">

    <div class="col">
        <h2>Cadastrar</h2>
        <msg texto="@TempData["msg"]"></msg>
        <hr />
        <form asp-action="Cadastrar">
            <div class="mb-3">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Valor"></label>
                <input asp-for="Valor" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="ManutencaoEmDia"></label>
                <input asp-for="ManutencaoEmDia" class="form-control" />
            </div>
            <input type="submit" class="btn btn-success" value="Cadastrar" />
        </form>
    </div>
    <div class="col mt-2">
        <h2>Lista de Manutenções</h2>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Valor</th>
                <th>Manutenção em dia</th>
            </tr>
                @foreach(Manutencao m in ViewBag.manutencao)
                {
                    <tr>
                        <td>@m.ManutencaoId</td>
                        <td>@m.Nome</td>
                        <td>@m.Valor</td>
                        <td>@(m.ManutencaoEmDia?"Sim":"Não")</td>
                    </tr>
                }
        </table>
    </div>
</div>


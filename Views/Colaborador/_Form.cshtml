@model Colaborador

<div class="form-group">
	<label asp-for="Nome">Nome</label>
	<input asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome completo...">
</div>
<div class="form-group">
	<label asp-for="Especialidade">Especialidade</label>
	<input asp-for="Especialidade" type="text" class="form-control" placeholder="Digite o cargo...">
</div>
<div class="form-group">
	<label asp-for="ContratoTrabalho.DataContratacao">Data de Contratação</label>
	<input asp-for="ContratoTrabalho.DataContratacao" type="date" class="form-control">
</div>
<div class="form-group">
	<label asp-for="ContratoTrabalho.Tipo">Contrato de Trabalho</label>
	<select asp-for="ContratoTrabalho.Tipo" class="form-control" asp-items="@Html.GetEnumSelectList<TipoContrato>()">
		<option>Selecione</option>
	</select>
</div>
<div class="form-group">
	<label asp-for="ContratoTrabalho.ValorSalario">Valor Salário</label>
	<input asp-for="ContratoTrabalho.ValorSalario" type="number" class="form-control" placeholder="Digite o valor do salário...">
</div>









